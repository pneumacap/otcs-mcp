{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "../dist-agent",
    "baseUrl": "..",
    "paths": {
      "@otcs/core": ["./packages/core/src/index.ts"],
      "@otcs/core/*": ["./packages/core/src/*"]
    }
  },
  "include": ["./**/*.ts", "../packages/core/src/**/*.ts"],
  "exclude": ["node_modules"]
}
