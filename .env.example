# ──────────────────────────────────────────────
# Altius Environment Configuration
# Copy this file to .env and fill in your values
# ──────────────────────────────────────────────

# ── OTCS Connection ──
OTCS_BASE_URL=https://your-server.com/otcs/cs.exe/api
OTCS_USERNAME=
OTCS_PASSWORD=
OTCS_DOMAIN=
OTCS_TOOL_PROFILE=full

# ── Anthropic API ──
ANTHROPIC_API_KEY=

# ── Database (PostgreSQL) ──
DATABASE_URL=postgresql://altius:changeme@localhost:5432/altius
POSTGRES_PASSWORD=changeme  # Used by docker-compose

# ── NextAuth ──
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=  # Generate with: openssl rand -base64 32

# ── Stripe (Billing) ──
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRO_PRICE_ID=
STRIPE_ENTERPRISE_PRICE_ID=

# ── OAuth Providers (optional) ──
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# ── Security ──
ENCRYPTION_KEY=  # 32-byte hex key for AES-256-GCM. Generate with: openssl rand -hex 32
# Set to true only for development with self-signed certificates
OTCS_TLS_SKIP_VERIFY=false
