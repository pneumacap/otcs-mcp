{
  "name": "otcs-mcp",
  "version": "1.0.0",
  "description": "MCP server for OpenText Content Server document management",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc --noEmit",
    "start": "tsx src/index.ts",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "tsx tests/test.ts",
    "test:workflows": "tsx tests/test-workflows.ts",
    "test:workspaces": "tsx tests/test-workspaces.ts",
    "test:rm": "tsx tests/test-rm.ts",
    "agent": "TS_NODE_PROJECT=agent/tsconfig.json tsx -r tsconfig-paths/register agent/poller.ts",
    "agent:dev": "TS_NODE_PROJECT=agent/tsconfig.json tsx -r tsconfig-paths/register --watch agent/poller.ts",
    "migrate": "tsx scripts/migrate.ts",
    "migration": "TS_NODE_PROJECT=migration/tsconfig.json tsx migration/runner.ts",
    "migration:dry": "TS_NODE_PROJECT=migration/tsconfig.json tsx migration/runner.ts --dry-run",
    "lint": "eslint packages/ web/src/ src/ --ext .ts,.tsx",
    "lint:fix": "eslint packages/ web/src/ src/ --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "build:all": "npm run build && cd web && npm run build",
    "clean": "rm -rf dist dist-agent dist-migration web/.next"
  },
  "keywords": [
    "mcp",
    "opentext",
    "content-server",
    "document-management"
  ],
  "author": "",
  "license": "MIT",
  "workspaces": [
    "packages/core"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "mammoth": "^1.11.0",
    "pdf-parse": "^1.1.1",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jszip": "^3.4.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jszip": "^3.10.1",
    "prettier": "^3.8.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^3.2.4"
  }
}
